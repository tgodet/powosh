  <div class="wrapper-no-padding-bottom header-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">

          <div class="library-header">

            <h3>Library</h3>

            <ul class="nav nav-pills text-center" role="tablist">
              <li role="presentation" class="active tab-xs-third"><a href="#friend" aria-controls="home" role="tab" data-toggle="tab">Share (<%=@requests_from_friends.count %>)</a></li>
              <li role="presentation" class="tab-xs-third"><a href="#own" aria-controls="profile" role="tab" data-toggle="tab">Borrow (<%=@requests_to_friends.count %>)</a></li>
              <li role="presentation" class="tab-xs-third"><a href="#own" aria-controls="profile" role="tab" data-toggle="tab">Library (<%=@requests_to_friends.count %>)</a></li>
            </ul>

          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="tab-content">


          <div role="tabpanel" class="tab-pane active" id="friend">
            <h4>Requests from Friends</h4>

            <% if @requests_from_friends.count == 0 %>
            <p>No requests at the moment!</p>
            <% else %>

            <% @requests_from_friends.each do |loan| %>
            <div class="row-bordered-top list-row-library">
              <div class="row">
                <%= render partial: "shared/loan_card",
                object: loan, as: :loan,
                locals: {
                  owner_pic: false,
                  overlay: "wants this book",
                  date_text: "Requested: ",
                  date_method: "created_at",
                } %>

                <div class="col-xs-12 col-md-4">
                  <div class="flex-container-centered-vh list-row-130">
                   <%= link_to "Approve", approve_loan_path(loan), {class: "btn btn-primary btn-half-width", :method => :patch} %>
                   <%= link_to "Reject", reject_loan_path(loan), {class: "btn btn-default btn-half-width", :method => :patch} %>
                 </div>
               </div>

             </div>
           </div>
           <% end %>

           <% end %>

         </div>


         <div role="tabpanel" class="tab-pane" id="own">

          <h4>Own Requests</h4>
          <% if @requests_to_friends.count == 0 %>
          <p>No open requests! Why not check out your friends' libraries!</p>
          <% else %>

          <% @requests_to_friends.each do |loan| %>
          <div class="row-bordered-top list-row-library">
            <div class="row">

              <%= render partial: "shared/loan_card", object: loan, as: :loan,
              locals: {
                owner_pic: true,
                overlay: "has this",
                date_text: "Requested: ",
                date_method: "created_at",
              } %>

              <div class="col-xs-12 col-md-4">
                <div class="flex-container-centered-vh list-row-130">
                  <% if loan.rejected %>
                  <div class="label label-danger" type="submit">Rejected</div>
                  <% elsif loan.confirmed %>
                  <div class="label label-success" type="submit">Approved</div>
                  <% else %>
                  <div class="label label-default" type="submit">Open</div>
                  <% end %>
                </div>
              </div>

            </div>
          </div>
          <% end %>

          <% end %>

          <h4>Your Loans</h4>
          <% if @loans.count == 0 %>
          <p>You don't have any borrowed books right now!</p>
          <% else %>

          <% @loans.each do |loan| %>
          <div class="row-bordered-top list-row-library">
            <div class="row">

              <%= render partial: "shared/loan_card", object: loan, as: :loan,
              locals: {
                owner_pic: true,
                overlay: "'s book'",
                date_text: "Loan approved: ",
                date_method: "approved_on",
              } %>


              <div class="col-xs-12 col-md-4">
                <div class="flex-container-centered-vh list-row-130">
                  <%= link_to "Return", "#", {class: "btn btn-primary btn-half-width", :method => :patch} %>
                </div>
              </div>

            </div>
          </div>
          <% end %>

          <% end %>


        </div>


      </div>
    </div>
  </div>
</div>
