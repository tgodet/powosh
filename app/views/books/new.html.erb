<div class="container text-center">
<h2>Partage ton livre!</h2>
</div>

<div class="container">
<%= simple_form_for [@user, @book], :url => {:controller => 'books', :action => 'create'}, :method => :post do |f| %>
  <%= f.error_notification %>
  <%= f.label :title, 'Title' %>
  <%= f.input :title, label: false, placeholder:"Ex: A la recherche du temps perdu" %>
  <%= f.label :author, 'Author' %>
  <%= f.input :author, label: false, placeholder:"Marcel Proust" %>
  <%= f.label :language, 'Language' %>
  <%= f.input :language, label: false, collection: Book::LANGUAGES,  placeholder:"FranÃ§ais" %>
  <%= f.label :my_description, 'My own description' %>
  <%= f.input :my_description, label: false, placeholder:"I love that book because..." %>
  <%= f.label :my_rating, 'My rating' %>
  <%= f.input :my_rating, label: false, collection: 1..10 %>
  <%= f.label :isbn, 'Code ISBN' %>
  <%= f.input :isbn, label: false, placeholder:"978-1-56619-909-4" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit %>
<% end %>

</div>
